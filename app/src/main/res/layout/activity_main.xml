<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/beige">

    <ImageView
        android:id="@+id/rescuelogo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:src="@drawable/victorialogo"
        android:scaleType="fitCenter"/>

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rescuelogo"
        android:layout_centerVertical="true"
        android:hint="Username"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:inputType="text"
        android:background="@drawable/edt_login_background"
        android:backgroundTint="@color/white" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/edtUsername"
        android:layout_centerVertical="true"
        android:hint="Password"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        app:passwordToggleEnabled="true"
        android:inputType="textPassword"
        android:background="@drawable/edt_login_background"
        android:backgroundTint="@color/white" />

    <TextView
        android:id="@+id/txtForgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPassword"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="20sp"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:text="Forgot your password?"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/edtPassword"
        android:textSize="25sp"
        android:text="Login"
        app:backgroundTint="@null"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:background="@drawable/btn_login"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginLeft="60sp"
        android:layout_marginTop="20sp"
        android:textSize="15sp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:text="Don't have an account yet?"/>

    <TextView
        android:id="@+id/txtSign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginLeft="240sp"
        android:layout_marginTop="20sp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Sign up now"/>

</RelativeLayout>