<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/beige">


    <ImageView
        android:id="@+id/ic_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="130dp"
        android:contentDescription="@string/forgot_password_icon_desc"/>

    <TextView
        android:id="@+id/FpInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_profile"
        android:layout_marginTop="20sp"
        android:text="@string/forgotPassword_instruction_text"
        android:gravity="center"
        android:textSize="23sp"
        android:fontFamily="@font/instrument_sans"/>

    <EditText
        android:id="@+id/edtFpUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/FpInstruction"
        android:layout_centerVertical="true"
        android:hint="Username"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:inputType="text"
        android:background="@drawable/fp_username"/>

    <Button
        android:id="@+id/OTPbtn_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/edtFpUsername"
        android:textSize="25sp"
        android:text="Continue"
        app:backgroundTint="@null"
        android:textColor="@color/skyblue"
        android:textStyle="bold"
        android:background="@drawable/otp_btnsubmit"/>

</RelativeLayout>